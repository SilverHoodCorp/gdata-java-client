<?xml version="1.0"?>

  <!--
    You must have ANDROID_JAR set to the location of android.jar (minimum 2.0),
    and JAVA_HOME set to a JDK (minimum 1.5) installation.
  -->
<project basedir="." default="compile" name="google-api">

  <import file="build-common.xml" />
  <import file="build-apis.xml" />

  <property name="classes.test.dir" value="${build.dir}/classes-test" />

  <target name="clean" description="Remove generated files.">
    <delete dir="${build.dir}" />
  </target>

  <target name="zipsrc" depends="dist-init" description="Zip source.">
    <zip destfile="${dist.dir}/google-api-${version}-src.zip" basedir="${src.dir}" />
  </target>

  <target name="google-api-full-jar" depends="compile,dist-init">
    <jar destfile="${dist.dir}/google-api-${version}.jar" basedir="${classes.dir}" />
  </target>

  <target name="google-api-android-jar" depends="compile,dist-init">
    <jar destfile="${android.dir}/google-api-core.jar" basedir="${classes.dir}"
      includes="com/google/api/client/*.class,com/google/api/client/escape/*.class,com/google/api/client/http/*.class,com/google/api/client/http/android/*.class,com/google/api/client/http/apache/*.class,com/google/api/client/http/googleapis/*.class" />
  </target>

  <target name="google-api-xml-jar" depends="compile,dist-init">
    <jar destfile="${android.dir}/google-api-xml.jar" basedir="${classes.dir}"
      includes="com/google/api/client/http/android/atom/*.class,com/google/api/client/http/xml/atom/*.class,com/google/api/client/http/xml/atom/googleapis/*.class,com/google/api/client/xml/*.class,com/google/api/client/xml/atom/*.class" />
  </target>

  <target name="google-api-json-jar" depends="compile,dist-init">
    <jar destfile="${android.dir}/google-api-json.jar" basedir="${classes.dir}"
  includes="com/google/api/client/http/json/googleapis/*.class,com/google/api/client/json/*.class,com/google/api/client/json/googleapis/*.class" />
  </target>

  <target name="javadoc" description="Generate JavaDoc" depends="dist-init">
    <property name="javadoc.dir" value="${dist.dir}/javadoc" />
    <delete dir="${javadoc.dir}" />
    <mkdir dir="${javadoc.dir}" />
    <javadoc sourcepath="${src.dir}" source="1.5" destdir="${javadoc.dir}"
      use="true" windowtitle="Google API Java Library ${version}" doctitle="Google API Java Library ${version}"
      packagenames="${api.packagenames},com.google.api.client,com.google.api.client.escape,com.google.api.client.http,com.google.api.client.http.android,com.google.api.client.http.android.atom,com.google.api.client.http.apache,com.google.api.client.http.auth.googleapis,com.google.api.client.http.auth.googleapis.authsub,com.google.api.client.http.auth.googleapis.clientlogin,com.google.api.client.http.auth.googleapis.wrap,com.google.api.client.http.auth.oauth,com.google.api.client.http.auth.wrap,com.google.api.client.http.discovery,com.google.api.client.http.googleapis,com.google.api.client.http.json.googleapis,com.google.api.client.http.net,com.google.api.client.http.xml.atom,com.google.api.client.http.atom.googleapis,com.google.api.client.xml,com.google.api.client.xml.atom">
      <classpath>
        <!--
          TODO change to this env variable @release time <pathelement
          location="${env.ANDROID_JAR}" />
        -->
        <pathelement location="${lib.dir}/android-2.0.1.jar" />
        <pathelement location="${lib.dir}/jackson-core-asl-1.4.3.jar" />
      </classpath>
      <link href="http://jackson.codehaus.org/1.4.2/javadoc" />
    </javadoc>
  </target>

  <target name="jars" description="Compile all jars"
    depends="google-api-full-jar,google-api-android-jar,google-api-xml-jar,google-api-json-jar,apijars" />

  <target name="dist"
    description="Build the distribution zip file that includes all compiled jar files"
    depends="jars,zipsrc,javadoc">
    <zip destfile="${build.dir}/google-api-java-${version}.zip" basedir="${dist.dir}" />
  </target>

  <target name="test" depends="google-api-full-jar" description="Execute JUnit tests.">
    <mkdir dir="${classes.test.dir}" />
    <javac srcdir="${test.dir}" debug="true" destdir="${classes.test.dir}"
      source="1.5" target="1.5">
      <compilerarg value="-Xlint:all" />
      <classpath>
        <pathelement location="${dist.dir}/google-api-${version}.jar" />
        <pathelement location="${lib.dir}/junit.jar" />
      </classpath>
    </javac>
    <java fork="true" classname="junit.textui.TestRunner" failonerror="true"
      taskname="junit">
      <classpath>
        <pathelement location="${classes.test.dir}" />
        <pathelement location="${dist.dir}/google-api-${version}.jar" />
        <pathelement location="${lib.dir}/junit.jar" />
      </classpath>
      <arg value="com.google.api.client.AllTests" />
    </java>
  </target>

  <target name="all" depends="clean,dist,test" description="Clean compile, distribute, and run tests" />
</project>
